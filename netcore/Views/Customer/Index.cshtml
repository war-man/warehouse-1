@model IEnumerable<netcore.Models.Invent.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminlteNetcoreIndex.cshtml";
    ViewData["EntityIcon"] = "fa fa-bank";
    ViewData["ListTitle"] = "Danh mục khách hàng";
    ViewData["IndexInfo"] = "Khách hàng là một tổ chức mua hàng hóa, loại hình dịch vụ từ công ty của bạn.";
}


<table class="table table-hover table-striped" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.customerName)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.size)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.street1)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.street2)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.province)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.country)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="tools">
                    <a asp-action="Edit" asp-route-id="@item.customerId" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                    <a asp-action="Details" asp-route-id="@item.customerId" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.customerId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                </div>
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customerName)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.size)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.street1)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.street2)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.province)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.country)
            </td>

        </tr>
        }
    </tbody>
</table>
